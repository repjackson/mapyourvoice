template(name='festivals')
    .ui.container
        #add_festival.ui.basic.button
            i.plus.icon
            |Add Festival
        .ui.items
            each festivals
                +festival_item
            
            
            
template(name='festival_item')
    .ui.item
        .content
            a(href="/view_festival/#{_id}")
                .image
                    img.ui.large.centered.image(src="{{c.url image_id }}")
                h1.ui.header #{title}
            .meta
                each tags
                    .ui.button.tag(class=tag_class) #{this}
            .description
                |!{description}
            // +voting
            // +favorite
            if can_edit
                a(href="/edit_festival/#{_id}").ui.basic.button
                    i.pencil.icon.icon
                    |Edit Festival