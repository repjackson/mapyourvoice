with item
    .ui.container
        .image
            img.ui.centered.image(src="{{c.url image_id height=400 width=800 background='white' crop='lpad'}}")
            .overlay-text 
                h1 #{title}
        .ui.hidden.divider
        .ui.divided.stackable.grid
            .ten.wide.column
                .meta
                    a(href=link target='_blank') #{link}
                .description
                    |!{description}
            .five.wide.column
                h3.ui.header When
                    .ui.basic.segment
                        h3
                            .ui.sub.header #{day} 
                            .ui.sub.header #{start_time} to #{end_time}

                h2.ui.header Tags
                each tags
                    .ui.basic.label #{this}
                h2.ui.header Actions
                +favorite_button
                if isInRole 'admin'
                    h2.ui.header Status
                    if published
                        .ui.basic.green.label Published
                    else
                        .ui.basic.red.label Unpublished
                    .extra.content
                        .ui.divider
                        i.large.red.configure.icon
                        a(href="/edit_festival/#{_id}").ui.basic.button
                            i.pencil.icon
                            |Edit